<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AdivnaElPokemon.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25" 
            Grid.Row="2"
            Grid.Column="1">
            <Label  Text="{Binding NumeroDeAciertos , StringFormat='El numero de Aciertos es : {0}'}"  FontSize="Header"  HorizontalOptions="Center"></Label>
            <Label Text="{Binding PokemonRespuesta.name}" FontSize="Header"  HorizontalOptions="Center"></Label>
            <ListView ItemsSource="{Binding ListadoDePokemons}" 
          SelectedItem="{Binding PokemonSeleccionado}" 
            Margin="0,10,0,0"
                 MaximumWidthRequest="300"
                        VerticalScrollBarVisibility="Never"
                    HorizontalOptions="Center"

                  >
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Orientation="Vertical">
                                <Image Source="{Binding sprites.front_default}" MinimumHeightRequest="200" MinimumWidthRequest="200"></Image>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
