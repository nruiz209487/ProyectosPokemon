<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AdivnaElPokemon.Pages.LobbyPage"
                    BackgroundColor="White">

    <VerticalStackLayout>
        <Image Source="https://www.icegif.com/wp-content/uploads/2023/02/icegif-1061.gif" MaximumHeightRequest="200" MaximumWidthRequest="400"></Image>
        <Button BackgroundColor="LightGrey" TextColor="Black" Text="Buscar Partida" Command="{Binding buscarPartidaCommand}" MaximumWidthRequest="200" BorderColor="Black"/>
        <Button BackgroundColor="LightGrey" TextColor="Black" Text="Salir cola" Command="{Binding abandonarColaCommand}"  MaximumWidthRequest="200" BorderColor="Black"/>
    </VerticalStackLayout>
</ContentPage>