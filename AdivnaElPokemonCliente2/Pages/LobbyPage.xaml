<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AdivnaElPokemon.Pages.LobbyPage"
                    BackgroundColor="White">

    <VerticalStackLayout>
        <Image Source="https://www.icegif.com/wp-content/uploads/2023/02/icegif-1061.gif" MaximumHeightRequest="200" MaximumWidthRequest="400"></Image>
        <Label Text="Juego de selecionar Pokemons Seleciona la mayor candidad de pokmons posibles antes que tu rival si fallas el contador se reinicia tienes un minuto"
             FontSize="Header"
               TextColor="Black"/>
        <Button TextColor="Black" Text="Jugar" Command="{Binding buscarPartidaCommand}" IsEnabled="{Binding BotonPulsado}" MaximumWidthRequest="200" BackgroundColor="Black"/>
    </VerticalStackLayout>
</ContentPage>